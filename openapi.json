  "paths" : {
    "/api/config" : {
      "get" : {
        "summary" : "Get dashboard configuration",
        "description" : "Retrieves runtime configuration values used by the dashboard UI",
        "tags" : [ "Configuration" ],
        "responses" : {
          "200" : {
            "description" : "Configuration successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/DashboardConfigResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/dashboard" : {
      "get" : {
        "summary" : "Get complete dashboard data",
        "description" : "Retrieves comprehensive Bitcoin node information including peers, blockchain, network, and mempool data",
        "tags" : [ "Bitcoin Node" ],
        "responses" : {
          "200" : {
            "description" : "Dashboard data successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/GlobalResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/getBlockchainInfo" : {
      "get" : {
        "summary" : "Get blockchain information",
        "description" : "Retrieves detailed information about the current state of the blockchain",
        "tags" : [ "Bitcoin Node" ],
        "responses" : {
          "200" : {
            "description" : "Blockchain information successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/BlockchainInfoResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/getbestblockhash" : {
      "get" : {
        "summary" : "Get best block hash",
        "description" : "Returns the hash of the most recent block in the blockchain",
        "tags" : [ "Bitcoin Node" ],
        "responses" : {
          "200" : {
            "description" : "Best block hash successfully retrieved",
            "content" : {
              "text/plain" : {
                "schema" : {
                  "type" : "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/getblock/{hash}" : {
      "get" : {
        "summary" : "Get block information",
        "description" : "Retrieves detailed information about a specific block by its hash",
        "tags" : [ "Bitcoin Node" ],
        "parameters" : [ {
          "description" : "Block hash (64 hexadecimal characters)",
          "required" : true,
          "name" : "hash",
          "in" : "path",
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "Block information successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/BlockInfoResponse"
                }
              }
            }
          },
          "400" : {
            "description" : "Invalid block hash format"
          }
        }
      }
    },
    "/api/getmempoolinfo" : {
      "get" : {
        "summary" : "Get mempool information",
        "description" : "Retrieves current mempool statistics and transaction information",
        "tags" : [ "Bitcoin Node" ],
        "responses" : {
          "200" : {
            "description" : "Mempool information successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/MempoolInfoResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/getnetworkinfo" : {
      "get" : {
        "summary" : "Get network information",
        "description" : "Retrieves detailed network information from the Bitcoin Core node",
        "tags" : [ "Bitcoin Node" ],
        "responses" : {
          "200" : {
            "description" : "Network information successfully retrieved",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/NetworkInfoResponse"
                }
              }
            }
          }
        }
      }
    }
